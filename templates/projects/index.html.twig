{% extends 'base.html.twig' %}

{% block title %}Hello ProjectsController!{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Mes projets</h1>
        <div class="row">
            {% for project in projects %}
                <div class="col-md-4 mt-4">
                <div class="card profile-card-5">
                    <div class="card-img-block">
                        <img src="{{ project.image }}" alt="project image" class="card-img-top">
                    </div>
                    <div class="card-body">
                        <h5> {{ project.title }} </h5>
                        <p class="card-text">
                            {{ project.introduction }}
                        </p>

                        <div class="projects-links d-flex justify-content-between">
                            <a href="#" target="_blank" class="btn btn-outline-dark">
                            <i class="fab fa-github"></i> Github
                            </a>
                            <a href=" {{ path('projects_show', {
                                'id' : project.id
                            } ) }} " class="btn btn-outline-info">
                                <i class="fas fa-info-circle"></i> En savoir plus
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
