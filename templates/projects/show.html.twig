{% extends "base.html.twig" %}

{% block body %}

<div class="container-fluid">
    <h1 class="text-center my-5"> {{ project.title }} </h1>
    <div class="row">
        <div class="col-4">
            <img src="{{ project.image }}" class="img-medium" alt="">
        </div>
        <div class="col-6 ml-5">
            <p>
                {{ project.description }}
            </p>
            <div class="d-flex justify-content-around">
                <a href="#" target="_blank" class="btn btn-outline-dark">
                <i class="fab fa-github"></i> Github
                </a>
                <a href="{{ project.github }}/archive/master.zip" class="btn btn-outline-info">
                    <i class="fas fa-download"></i> Télécharger
                </a>
            </div>
        </div>
    </div>
</div>

{% endblock %}